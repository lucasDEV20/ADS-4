package codigos;

import jdk.javadoc.internal.doclets.toolkit.resources.doclets;

public class Cauculadora {

	private double resultado = 0;

	public double subtrair(int n1, int n2) {
		resultado = n1 + n2;
		return resultado;
	}
	public double somar(int n1, int n2) {
		resultado = n1 + n2;
		return resultado;
	}
	public double multiplicaçao(int n1, int n2) {
		resultado = n1 * n2;
		return resultado;
	}
	public double divisao(int n1, int n2) {
		double v1, v2;
		v1 = Double.valueOf(n1);
		v2 = Double.valueOf(n2);

		resultado = n1 / n2;
		return resultado;
	}
}
